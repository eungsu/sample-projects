<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.DeptMapper">
	
	<resultMap type="com.example.dto.DeptListDto" id="DeptListDtoResultMap">
		<id column="department_id" property="deptId"/>
		<result column="department_name" property="deptName"/>
		
		<collection property="employees" ofType="com.example.vo.Employee">
			<id column="employee_id" property="id"/>
			<result column="first_name" property="firstName"/>
			<result column="last_name" property="lastName"/>
			<result column="job_id" property="jobId"/>
		</collection>
	</resultMap>
	
	<select id="getDeptList" resultMap="DeptListDtoResultMap">
		select
			A.department_id,
			A.department_name, 
			B.employee_id,
			B.first_name,
			B.last_name,
			B.job_id
		from
			departments A, employees B
		where
			A.department_id = B.department_id
		order by
			A.department_id asc		
	</select>
</mapper>
